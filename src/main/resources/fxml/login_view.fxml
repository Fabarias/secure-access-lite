<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.secureaccesslite.ui.LoginController"
            prefHeight="400.0"
            prefWidth="300.0">

    <!-- Usando VBox dentro del AnchorPane para obtener alignment y spacing -->
    <VBox alignment="CENTER"
          spacing="15.0"
          AnchorPane.topAnchor="50.0"
          AnchorPane.leftAnchor="50.0"
          AnchorPane.rightAnchor="50.0"
          AnchorPane.bottomAnchor="50.0">

        <Label text="Nombre de Usuario:"
               styleClass="field-label"/>

        <TextField fx:id="usernameField"
                   promptText="usuario"
                   prefWidth="200.0"/>

        <Label text="Contraseña:"
               styleClass="field-label"/>

        <PasswordField fx:id="passwordField"
                       promptText="contraseña"
                       prefWidth="200.0"/>

        <Button text="Ingresar"
                onAction="#handleLoginButtonAction"
                prefWidth="200.0"
                styleClass="login-button"/>


        <Label fx:id="errorMessageLabel"
               textFill="#801d26"
               wrapText="true"
               visible="false"/>


        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>
    </VBox>
</AnchorPane>